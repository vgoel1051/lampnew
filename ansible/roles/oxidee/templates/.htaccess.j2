    ExpiresByType image/icon                          "access plus 1 day"
    ExpiresByType text/ico                            "access plus 1 day"
    ExpiresByType image/x-ico                         "access plus 1 day"
    ExpiresByType image/x-icon                        "access plus 1 day"
