    ExpiresByType image/vnd.wap.wbmp                  "access plus 1 day"
    ExpiresByType application/vnd.wap.wbxml           "access plus 1 day"
    ExpiresByType application/smil                    "access plus 1 day"

    <IfModule mod_headers.c>
